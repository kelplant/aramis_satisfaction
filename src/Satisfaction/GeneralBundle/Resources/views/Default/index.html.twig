{% extends '::base.html.twig' %}
{% block title %} Accueil {% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/jquery.dataTables.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/dataTables.bootstrap.min.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-4 danger">
            <div class="home-gauche list-group-item disabled" data-href="#"> Tickets Jamais Notés</div>
            <table class="table table-striped" id="bootstrap-todo">
                <thead>
                <tr>
                    <th class="col-tab-2-title">Ticket</th>
                    <th class="col-tab-2-title">Sujet Ticket</th>
                </tr>
                </thead>
                <tbody>
                {% for ticket in todo %}
                    <tr data-href="{{ path('satisfaction_form_homepage_new', {'numticket':  ticket.NumTicket }) }}">
                        <td class="col-tab-1">{{ ticket.NumTicket }}</td>
                        <td class="col-tab-2">{{ ticket.Description[:35] ~ '...' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <a href="#" class="list-group-item disabled home-middle">Tickets Notés Ré-Ouverts</a>
            <table  class="table-striped"  id="bootstrap-offered">
                <thead>
                <tr>
                    <th class="col-tab-2-title">Ticket</th>
                    <th class="col-tab-2-title">Sujet Ticket</th>
                </tr>
                </thead>
                <tbody>
                {% for ticket in done_offered %}
                        <tr data-href="{{ path('satisfaction_form_homepage_edit', {'numticket':  ticket.NumTicket }) }}">
                            <td class="col-tab-1">{{ ticket.NumTicket }}</td>
                            <td class="col-tab-2">{{ ticket.Description[:35] ~ '...' }}</td>
                         </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <a href="#" class="list-group-item disabled home-droite">Tickets déjà Notés</a>
            <table class="table table-striped" id="bootstrap-answered">
                <thead>
                <tr>
                    <th class="col-tab-2-title">Ticket</th>
                    <th class="col-tab-2-title">Sujet Ticket</th>
                </tr>
                </thead>
                <tbody>
                {% for ticket in done_answered %}
                     <tr id="test" data-href="{{ path('satisfaction_form_homepage_view', {'numticket':  ticket.NumTicket }) }}">
                         <td class="col-tab-1">{{ ticket.NumTicket }}</td>
                         <td class="col-tab-2">{{ ticket.Description[:35] ~ '...' }}</td>
                      </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            $('#bootstrap-todo').DataTable({
                bFilter: false,
                bInfo: false,
                bLengthChange:false,
                "aoColumnDefs": [
                    //{"bSortable": false, "aTargets": [2] },
                    { "bSortable": false, "aTargets": [1] }
                ],
                "aaSorting": [[ 0, "asc" ]],
                "pageLength": 15,
                "language": {
                    "paginate": {
                        "previous": "Préc.",
                        "next": "Suiv."
                    }
                }
            });
            $('#bootstrap-offered').DataTable({
                bFilter: false,
                bInfo: false,
                bLengthChange:false,
                "aoColumnDefs": [
                    //{ "bSortable": false, "aTargets": [2] },
                    { "bSortable": false, "aTargets": [1] }
                ],
                "aaSorting": [[ 0, "asc" ]],
                "pageLength": 15,
                "language": {
                    "paginate": {
                        "previous": "Préc.",
                        "next": "Suiv."
                    }
                }
            });
            $('#bootstrap-answered').DataTable({bFilter: false,
                bInfo: false,
                bLengthChange:false,
                "aoColumnDefs": [
                   //{ "bSortable": false, "aTargets": [2] },
                    { "bSortable": false, "aTargets": [1] }
                ],
                "aaSorting": [[ 0, "desc" ]],
                "pageLength": 15,
                "language": {
                    "paginate": {
                        "previous": "Préc.",
                        "next": "Suiv."
                    }
                }
            });
        });
        $(function(){
            $('*[data-href]').click(function(){
                window.location = $(this).data('href');
                return false;
            });
        });

    </script>

{% endblock %}

