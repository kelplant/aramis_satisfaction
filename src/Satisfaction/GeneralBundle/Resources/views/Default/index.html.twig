{% extends '::base.html.twig' %}
{% block title %} Accueil {% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/select.dataTables.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/editor.dataTables.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/jquery.dataTables.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/buttons.dataTables.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/dataTables.bootstrap.min.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a href="#" class="list-group-item disabled"><div class="text-center">Tickets Jamais Notés</div></a>
            <table class="table table-striped" id="bootstrap-todo">
                <thead>
                <tr >
                    <th>Ticket</th>
                    <th>Sujet Ticket</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tbody>
                {% for ticket in todo %}
                    <tr >
                        <td style="text-align: center">{{ ticket.NumTicket }}</td>
                        <td>{{ ticket.Sujet[:20] ~ '...' }}</td>
                        <td style="text-align: center"><a href="{{ path('satisfaction_form_homepage_new', {'numticket':  ticket.NumTicket }) }}" "><i class="fa fa-pencil-square-o"></i></a</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <a href="#" class="list-group-item disabled"><div class="text-center">Tickets Jamais Notés</div></a>
            <table class="table table-striped" id="bootstrap-offered">
                <thead>
                <tr>
                    <th>Ticket</th>
                    <th>Sujet Ticket</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tbody>
                {% for ticket in done_offered %}
                        <tr>
                            <td style="text-align: center">{{ ticket.NumTicket }}</td>
                            <td>{{ ticket.Sujet[:20] ~ '...' }}</td>
                            <td style="text-align: center"><a href="{{ path('satisfaction_form_homepage_edit', {'numticket':  ticket.NumTicket }) }}"><i class="fa fa-pencil-square-o"></i></a></td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <a href="#" class="list-group-item disabled"><div class="text-center">Tickets Jamais Notés</div></a>
            <table class="table table-striped" id="bootstrap-answered">
                <thead>
                <tr>
                    <th>Ticket</th>
                    <th>Sujet Ticket</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tbody>
                {% for ticket in done_answered %}
                     <tr>
                         <td style="text-align: center">{{ ticket.NumTicket }}</td>
                         <td>{{ ticket.Sujet[:20] ~ '...' }}</td>
                         <td style="text-align: center"><a href="{{ path('satisfaction_form_homepage_view', {'numticket':  ticket.NumTicket }) }}"><i class="fa fa-pencil-square-o"></i></a></td>
                     </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){

            $('#bootstrap-todo').DataTable({bFilter: false, bInfo: false, bLengthChange:false});
            } );
     </script>
    <script>
        $(document).ready(function(){
            $('#bootstrap-offered').DataTable({bFilter: false, bInfo: false, bLengthChange:false});
        });
    </script>
    <script>
        $(document).ready(function(){
            $('#bootstrap-answered').DataTable({bFilter: false, bInfo: false, bLengthChange:false});
        });
    </script>

{% endblock %}

