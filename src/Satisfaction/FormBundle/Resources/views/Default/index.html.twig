                {{ form_errors(satisfactionForm.Satisfaction) }}
                <div class="col-sm-8">
                    <i class="fa fa-thumbs-o-down"></i>
                    {% for choix in satisfactionForm.Satisfaction %}
                        <td>
                            {{ form_widget(choix) }}
                            {{ form_label(choix) }}
                        </td>
                    {% endfor %}
                    <i class="fa fa-thumbs-o-up"></i>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(satisfactionForm.Conformite) }}
