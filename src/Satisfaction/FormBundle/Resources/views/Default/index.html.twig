                    {% for choix in satisfactionForm.Accompagnement %}
                        <td>
                            {{ form_widget(choix) }}
                            {{ form_label(choix) }}
                        </td>
                    {% endfor %}
                    <i class="fa fa-thumbs-o-up"></i>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(satisfactionForm.Delais) }}
                {{ form_errors(satisfactionForm.Delais) }}
                <div class="col-sm-8">
                    <i class="fa fa-thumbs-o-down"></i>
                    {% for choix in satisfactionForm.Delais %}
                        <td>
                            {{ form_widget(choix) }}
                            {{ form_label(choix) }}
                        </td>
                    {% endfor %}
                    <i class="fa fa-thumbs-o-up"></i>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(satisfactionForm.Commentaires) }}
                {{ form_errors(satisfactionForm.Commentaires) }}
                <div class="col-sm-8">
                    {{ form_widget(satisfactionForm.Commentaires) }}
                </div>
            </div>

        {{ form_row(satisfactionForm._token) }}
        <div style="display: none">
            {{ form_row(satisfactionForm.numticket) }}
        </div>

        <div style="display: none">
            {{ form_row(satisfactionForm.id) }}
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">

            </div>
        </div>
        {{ form_end(satisfactionForm) }}
    </div>
{% endblock %}
